<div class="jumbotron-fluid text-center jumbo jumbo-create-event">
  <div class="layer"></div>
  <h1 class="display-3 text-light">Créer un évènement</h1>
  <h3 class="display-5 text-light">Lachez-vous !</h3>
</div>
<div class="container mt-5" style="width: 40rem;">
  <%=form_tag url_for(events_path), method: 'post' do%>

    <div class="form-group mt-4">
      <h3>
        <%= label_tag 'Titre'%>
      </h3>
      <%= text_field_tag 'title','', require: true, class: "form-control"%>
    </div>
    
    <div class="form-group mt-4">
      <h3>
        <%= label_tag 'Description' %>
      </h3>
      <%= text_area_tag 'description','', require: true, class: "form-control"%>
    </div>
    
    <div class="form-group mt-4">
      <h3>
        <%= label_tag 'Date de début' %>
      </h3>
      <%= date_field_tag 'start_date','', require: true, class: "form-control"%>
    </div>

    <div class="form-group mt-4">
      <h3>
        <%= label_tag 'Durée en minutes' %>
      </h3>
      <%= text_field_tag 'duration','', require: true, class: "form-control"%>
    </div>

    <div class="form-group mt-4">
      <h3>
        <%= label_tag 'Lieu' %>
      </h3>
      <%= text_field_tag 'location','', require: true, class: "form-control"%>
    </div>

    <div class="form-group mt-4">
      <h3>
        <%= label_tag 'Prix' %>
      </h3>
      <%= text_field_tag 'price','', require: true, class: "form-control"%>
    </div>
    
    <%= submit_tag "Créer", class: "btn btn-primary mt-4"%>
    
  <%end%>
</div>
