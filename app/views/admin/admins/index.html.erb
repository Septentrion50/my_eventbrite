<div class="container-fluid pt-3 pb-3 top-admin-user-title">
  <h1>Gestion des utilisateurs</h1>
</div>
<div class="container-fluid">
  <div class="row cols-2">
    <div class="col-2 pt-3 side-1">
      <%=link_to 'Gestion des utilisateurs', admin_root_path, class: "nav-link text-dark"%>
      <%=link_to 'Gestion des événements', admin_events_path, class: "nav-link text-dark"%>
    </div>
    <div class="col-10">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Email</th>
            <th scope="col">Description</th>
            <th scope="col">Opérations</th>
          </tr>
        </thead>
        <tbody>
          <%@users.each do |u|%>
            <tr>
              <th scope="row"><%=u.id%></th>
              <td><%=u.first_name%></td>
              <td><%=u.last_name%></td>
              <td><%=u.email%></td>
              <td><%=u.description%></td>
              <td><%=link_to 'Opérations', admin_user_path(u.id), class: "btn btn-warning"%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
